
set encoding=utf-8
set fenc=utf-8
set showcmd
set number
set cursorline
set background=dark
set ruler
set visualbell
set noerrorbells
set showmatch
syntax on

set so=7
set expandtab
set tabstop=4
set shiftwidth=4
set softtabstop=4
set autoindent
set smartindent

set hlsearch
set ignorecase
set incsearch
set smartcase

set laststatus=2
set wildmenu
set history=5000

inoremap <silent> jj <ESC>
